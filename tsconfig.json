{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "lib": [
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "outDir": "build",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}